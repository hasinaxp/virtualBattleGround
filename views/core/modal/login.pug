#modalLogin.modal
    .modal-content
        h2.grey-text.text-darken-2.center.flow-text Log In
        .container
            .row
                form(method='POST' action ='func/sign/login' ).col.s12#loginForm
                    .row.input-field.ifld
                        input(type="email" id="l_email" name="email").validate 
                        label(for='l_email') Email Id
                    .row.input-field.ifld
                        input(type="password" id="l_password" name="password").validate
                        label(for='l_password') Password
                    .row
                        p.left.red-text#login-msg.small
                    br
                    .row.center
                        .col
                            button(type="submit" ).btn.waves-effect.waves-light.center.gap-1#loginBtn.modal-trigger Log In
                        .col
                            .g-signin2.center(data-onsuccess='onSignIn')
                        